<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Preview RGB Camera -->
    <com.palm.common.opengl.GLFrameSurface
        android:id="@+id/gl_rgb"
        android:layout_width="360dp"
        android:layout_height="480dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true" />

    <!-- Preview IR Camera -->
    <com.palm.common.opengl.GLFrameSurface
        android:id="@+id/gl_ir"
        android:layout_width="360dp"
        android:layout_height="480dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true" />

    <!-- QR Code for enrollment -->
    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:padding="16dp" />

    <!-- Status text -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="@string/place_palm"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#80000000"
        android:padding="12dp" />

    <!-- Scan again button (for enrollment) -->
    <Button
        android:id="@+id/btn_scan_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_status"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Scanner Ã  nouveau"
        android:visibility="gone" />

</RelativeLayout>
